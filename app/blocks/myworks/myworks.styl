.myworkscontainer
	position relative
	top 42px
	right 8px
	width 100%
	height 669px
	margin auto
	display flex
	justify-content space-around
	flex-wrap wrap
	+from-width(393px)
		height 419px
	+from-width(551px)
		height 279px
	+from-width(604px)
		height 279px
		width 90%
	.task
		width 158px
		height 158px
		border 15px solid transparent
		border-image url(/assets/square.png) 15 round
	.mount
		width 148px
		height 148px
		background-color #E0D9D2
		&_left
			transform rotate(5deg)
		&_center
			transform rotate(4deg)  translate(5px, -5px)
		&_right
			transform rotate(-1deg)
	.js
		background-repeat no-repeat
		background-position center
		background-size 150px
		background-image url(/assets/js_sepia.png)
		&_center
			transform rotate(-4deg) translate(-10px, -10px)
		&_static
			background-image url(/assets/js_sepia.png)
		&_dynamic
			background-image url(/assets/js.gif)
			background-position -53px 14px
			background-size 210px 159px
			background-color #FFF
		width 150px
		height 150px
	.canvas
		background-repeat no-repeat
		background-position center
		background-size 150px
		background-image url(/assets/canvas_sepia.png)
		&_center
			transform rotate(-4deg) translate(-10px, -10px)
		&_static
			background-image url(/assets/canvas_sepia.png)
		&_dynamic
			background-image url(/assets/canvas.gif)
			background-position -63px -8px
			background-size 280px 206px
			background-color #FFF
		width 148px
		height 148px
	.svg
		background-repeat no-repeat
		background-position center
		background-size 150px
		background-image url(/assets/svg_sepia.png)
		&_center
			transform rotate(-1deg) translate(-10px, -10px)
		&_static
			background-image url(/assets/svg_sepia.png)
		&_dynamic
			background-image url(/assets/svg.gif)
			background-position -1px 7px
			background-size 150px 113px
			background-color #FFF
		width 148px
		height 148px
