include ../col/col
include ../checkbox/checkbox

mixin table(name)
	- let list = getData(name+'.json');
	+b.table
		+col('left')
			- for (var i = 0;i < list.length/3; ++i) 
				+checkbox(i, list[i][1], list[i][0])
		+col('center')
			- for (i = ((list.length+1)/3).toFixed(); i < 2*(list.length+1)/3; ++i) 
				+checkbox(i, list[i][1], list[i][0])
		+col('right')
			- for (i = ((list.length+1)*2/3+1).toFixed(); i < list.length; ++i) 
				+checkbox(i, list[i][1], list[i][0], list[i][2])