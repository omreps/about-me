.slidercontainer
	width 100%
	height 180px
	position relative
	top 18px
	+from-width(820px)
		height 142px
	&__slider_hidden
		&::-ms-slider-thumb
			-ms-appearance none
			display none
		&::-o-slider-thumb
			-o-appearance none
			display none
		&::-webkit-slider-thumb
			-webkit-appearance none
			display none
		&::-moz-range-thumb
			background transparent
			-moz-appearance none
			appearance none
			display none
			border 0				
	&__slider
		height 20px
		width calc(100%+12px)
		background transparent
		-webkit-appearance none
		-moz-appearance none
		-ms-appearance none
		-o-appearance none
		appearance none
		position relative
		right 6px
		+from-width(500px)
			width calc(100%+9px)
		&::-o-range-track
			background transparent
			-o-appearance none
			appearance none
		&::-ms-fill-lower
			color transparent
			background transparent
		&::-ms-track
			border-color transparent
			color transparent
			background transparent
		&::-moz-range-track
			background transparent
			-moz-appearance none
			appearance none
		&::-webkit-slider-thumb
			-webkit-appearance none
			appearance none
			width 17px
			height 14px
			border 0
			position relative
			background url('/assets/slider_pointer.png')
			background-position center
			cursor pointer
		&::-moz-range-thumb
			-moz-appearance none
			appearance none
			background transparent
			width 17px
			height 14px
			border 0
			position relative
			background url('/assets/slider_pointer.png')
			background-position center
			cursor pointer
		&::-ms-thumb
			-ms-appearance none
			appearance none
			background transparent
			color transparent
			background transparent
			width 17px
			height 14px
			border 0
			position relative
			background url('/assets/slider_pointer.png')
			background-position center
			cursor pointer
		&::-o-range-thumb
			-o-appearance none
			appearance none
			background transparent
			width 17px
			height 14px
			border 0
			position relative
			background url('/assets/slider_pointer.png')
			background-position center
			cursor pointer
	.underline
		width calc(100% - 2px)
		height 4px
		background transparent
		background-repeat no-repeat
		background-position bottom center
		background-image url(/assets/underline.png)
		background-size cover
		position relative
		top 2px
		left 1px
	.ticks
		width 100%
		height 28px
		bottom 5px
		right 2px
		&__left_left
			display table-cell
			width 19.1%//142px
			height 25px
			background url('/assets/slider_left_tick.png') no-repeat
			position relative
			left 1px
		&__left_center
			display table-cell
			width 29.5%//227px
			height 25px
			background url('/assets/slider_left_center_tick.png') no-repeat
		&__right
			display table-cell
			&_center
				display table-cell
				width 293px
				height 25px
				background url('/assets/slider_right_center_tick.png') no-repeat
			&_right
				display table-cell
			height: 25px
			width: 16%
			background url('/assets/slider_right_tick.png') no-repeat right
			position relative
			right 0.5%
	.txts
		width 100%
		font-size 13px
		font-family "PTSans"
		font-weight: bold
		color rgb(0, 0, 0)
		position relative
		top 1px
		left 3px
		&__first
			display table-cell
			width 19.1%
			position relative
			right 3px
		&__second
			display table-cell
			width 27.5%
			position relative
			right 4px
		&__third
			display table-cell
			position relative
			&_left
				display table-cell
				width 22%
				left 8px			
				+mobile()
					left 0.5%
			&_right
				display table-cell
				position relative
				text-align right
				right 9px			
				+mobile()
					right 1%